<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4 col-lg-4 mb-4">
      <div class="card">
        <div id="<%= dom_id tester %>">
          <div class="card-header text-center">
            <strong><%= tester.product.name %></strong>
          </div>

          <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <%= image_tag tester.product.image, width: "200", height: "200" %>
            <p>
              <strong>SKU:</strong>
              <%= tester.product.sku %>
            </p>

            <p>
              <strong>Condition:</strong>
              <%= tester.condition %>
            </p>

            <p>
              <strong>Time created:</strong>
              <%= time_ago_in_words(tester.created_at) %>
            </p>

            <p>
              <%= link_to "Edit this tester", edit_tester_path(@tester), class: "btn btn-secondary" %>
            </p>       

           <% if current_employee.role.title =="Operations Associate" || current_employee.admin? %> 
            <p>
              <%= button_to "Trash this tester", @tester, method: :delete, class: "btn btn-outline-secondary" %>
            </p> 
          <%end%>

          </div>    
        </div>
      </div>
    </div>
  </div>
</div>
