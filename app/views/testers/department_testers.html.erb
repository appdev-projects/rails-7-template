<div style="margin: 20px; padding:10px; text-align:center;">
  <h1><%= @department.name %> Testers</h1>
</div>

<div class="container" style="margin-top: 30px; position: relative">
  <div class="row" data-masonry='{"percentPosition": true }'>
    <% @testers.each do |tester| %>
      <div class="col-sm-6 col-lg-4 mb-4">
        <div class="card h-100 border-secondary mb-3">
          <div class="card-header border-dark" style="text-align:center; background-color: #cccccc; padding: 10px;">
            <strong><%= tester.product.name %></strong>
          </div>

          <div class="card-body d-flex flex-column align-items-center justify-content-center" >
            <%= image_tag tester.product.image, width: "200", height: "200", class: "img-fluid" %>
            <p>
              <strong>SKU:</strong>
              <%= tester.product.sku %>
            </p>

            <p>
              <strong>Condition:</strong>
              <%= tester.condition %>
            </p>

            <p>
              <strong>Location:</strong>
              <%= tester.location %>
            </p>

            <p>
              <strong>Time Created:</strong>
              <%= tester.created_at.strftime("%B %d, %Y %H:%M:%S") %>
            </p>

            <div class="d-flex justify-content-center">
              <% if current_employee.admin? == false %>
                <p><%= link_to "Edit this tester", edit_tester_path(tester), class: "btn btn-outline-secondary", style: "margin-right:10px;" %></p>
              <% end %>
              <% if current_employee.role.title == "Operations Associate" %>
                <p><%= link_to "Trash this tester", trash_path(tester), method: :patch, class: "btn btn-outline-danger" %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="pagination-container" style="text-align: center;">
  <%= paginate @testers %>
</div>
