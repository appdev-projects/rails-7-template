<div style="margin: 20px; padding:10px; text-align:center;">
  <h1>New Tester</h1>
</div>

<div class="product_search">
  <div class="container" style="margin-top: 30px; margin-bottom: 20px;">
    <%= search_form_for @q, remote: true, html: { class: "form-inline my-2 my-lg-0" }, url: new_tester_path do |q| %>
      <%= q.search_field :name_or_sku_cont, class: "form-control mr-sm-2", placeholder: "Search Products by Name or SKU" %>
      <%= q.submit "Search", class: "btn btn-primary" %>
      <%= link_to "Clear", testers_path, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>

<div class="container mt-4">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">SKU: <%= product.sku %></p>
              <a href="<%= new_product_path(product) %>" class="btn btn-outline-primary">Create Tester</a>
            </div>
            <%= image_tag product.image, width: "50", height: "50", class: "ml-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
